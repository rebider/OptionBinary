<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading">
              <h3 class="panel-title"><%= I18n.t('strategies_title') %>
              </h3>
            </div>
            <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                      <tr>
                        <th><%= I18n.t('strategies_table_name') %></th>
                        <th colspan="2"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @strategies.each do |strategy| %>
                        <tr class="odd gradeX">
                          <td><%= strategy.Name %></td>
                          <td><%= link_to I18n.t('strategies_button_edit'), edit_strategy_path(strategy) %></td>
                          <td><%= link_to I18n.t('strategies_button_destroy'), strategy, method: :delete, data: { confirm: I18n.t('dashboard_alert_delete') } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer text-right">
              <%= link_to I18n.t('strategies_button_new'), new_strategy_path, :class => "btn btn-info" %>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<br>