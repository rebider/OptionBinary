<%= form_for(@strategy) do |f| %>
  <div class="panel panel-default">
      <div class="panel-heading">
          New Strategy
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <form class="form-horizontal" role="form">
              <% if @strategy.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@strategy.errors.count, "error") %> prohibited this strategy from being saved:</h2>

                  <ul>
                  <% @strategy.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <%= f.hidden_field :User_id, :value => current_user.id %>

              <div class="form-group">
                  <%= f.label :Name, class:'col-sm-3' %>
                  <div class="col-sm-9">
                    <%= f.text_field :Name, class:'form-control' %>
                  </div>
              </div>

              <%= f.hidden_field :Type, :value => "Private" %>

              <div>
                <%= f.submit "Save" , :class=> "btn btn-default" %>
              </div>
            </form>
          </div>
        </div>
      <!-- /.row (nested) -->
      </div>
        <!-- /.panel-body -->
  </div>
    <!-- /.panel -->
<% end %>
