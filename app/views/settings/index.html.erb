<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
          <div class="panel-heading">
            <h3 class="panel-title"><%= I18n.t('configuration_title') %>
            </h3>
          </div>
          <div class="panel-body">
              <div class="dataTable_wrapper">
                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                   <thead>
                      <tr>
                        <th><%= I18n.t('configuration_table_DailyGoalPercent') %></th>
                        <th><%= I18n.t('configuration_table_Maximumtradesperday') %></th>
                        <th><%= I18n.t('configuration_table_Maximumpercentpertrade') %></th>
                        <th><%= I18n.t('configuration_table_Maximumpercentlossperday') %></th>
                        <th></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @settings.each do |setting| %>
                        <tr>
                          <td>
                              
                          </td>
                          <td>
                              <%= setting.MaximumTradesPerDay %> %
                           </td>
                          <td>
                              <%= setting.MaximumPercentPerTrade %> %
                          </td>
                          <td>
                              <%= setting.MaximumPercentLossPerDay %> %
                           </td>                          
                          <td><%= link_to I18n.t('configuration_button_edit'), edit_setting_path(setting) %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<br>


