<div class="list-group">
    <% @trades.each do |trade| %>

        <li class="list-group-item dropdown">

            <span> <%= trade.created_at.strftime("%I:%M%p") %> </span>
            <% if trade.Option == 'CALL' %>
                <span class="glyphicon glyphicon-chevron-up" ></span>
            <% else %>
                <span class="glyphicon glyphicon-chevron-down" ></span>
            <% end %>

            <span> <%= trade.Azzet.Name %> </span>

            <span> $ <%= trade.Amount %> </span>

            <button type="button" class="btn btn-default dropdown-toggle pull-righ" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cog"></span></button>
    
            <ul class="dropdown-menu dropdown-menu-right" role="menu">
                <li>
                    <%= link_to 'WIN', update_result_path(:trade => trade, :id => trade.id, :Result => 'WIN' ), :method => :post, :remote => true %>
                </li>
                <li>
                    <%= link_to 'TIE', update_result_path(:trade => trade, :id => trade.id, :Result => 'TIE' ), :method => :post, :remote => true %>
                </li>
                <li>
                    <%= link_to 'LOST', update_result_path(:trade => trade, :id => trade.id, :Result => 'LOST' ), :method => :post, :remote => true %>
                </li>           
            </ul>      

        </li>

    <% end %>
</div>



