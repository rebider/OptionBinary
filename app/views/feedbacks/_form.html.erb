
<%= form_for(@feedback, :html => {:class => 'form-horizontal', :role => 'form'} ) do |f| %>
  
  	<div class="panel-body">

	  <% if @feedback.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

	      <ul>
	      <% @feedback.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <%= f.hidden_field :user_id, :value => current_user.id %>

	  <h3><%= I18n.t('feedback_form_message_h2')%></h3>

	  <div class="form-group">
	      <%= f.label I18n.t('feedback_form_title'), class:'col-sm-3' %>
	      <div class="col-sm-9">
	        <%= f.text_field :title, class:'form-control', :data => {:validation => "required"} %>
	      </div>
	  </div>

	  <div class="form-group">
	      <%= f.label I18n.t('feedback_form_description'), class:'col-sm-3' %>
	      <div class="col-sm-9">
	        <%= f.text_area :description, cols:'20', rows:'10', class:'form-control', :data => {:validation => "required"} %>
	      </div>
	  </div>
	</div>
	<div class="panel-footer text-right">
		<%= link_to :controller=> '/dashboard' do %>
            <span  class="btn btn-default">
                <%= I18n.t('feedback_form_cancel') %>
            </span>
        <% end %>
	  	<%= f.submit I18n.t('feedback_form_send'), :class=> "btn btn-info" %>
	</div>

<% end %>

<script>
  $.validate();
</script>