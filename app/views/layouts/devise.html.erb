<body id="page-top">
  <style type="text/css">
    .navbar-header{

    }
    header {
        position: relative;
        width: 100%;
        min-height: auto;
        text-align: center;
        color: #fff;
        background-position: center;
    }

    header .header-content {
        position: relative;
        width: 100%;
        padding: 100px 15px;
        text-align: center;
    }

    header .header-content .header-content-inner h1 {
        margin-top: 0;
        margin-bottom: 0;
        text-transform: uppercase;
        font-weight: 700;
    }

    header .header-content .header-content-inner hr {
        margin: 30px auto;
    }

    header .header-content .header-content-inner p {
        margin-bottom: 50px;
        font-size: 16px;
        font-weight: 300;
        color: rgba(255,255,255,.7);
    }
    hr {
        max-width: 50px;
        border-color: #f05f40;
        border-width: 3px;
    }

    hr.light {
        border-color: #fff;
    }
    .navbar-header{
      background-color: transparent;
    }
    @media(min-width:768px) {
        header {
            min-height: 100%;
        }

        header .header-content {
            position: absolute;
            top: 50%;
        }

        header .header-content .header-content-inner {
            margin-right: auto;
            margin-left: auto;
            max-width: 1000px;
        }

        header .header-content .header-content-inner p {
            margin-right: auto;
            margin-left: auto;
            max-width: 80%;
            font-size: 18px;
        }
        .navbar-header:before{
        background-color: transparent;
      }
    }
