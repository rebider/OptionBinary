<div class="table-responsive">
    <table id="tbl_open_trades" class="table table-striped table-hover">
        <thead>
            <tr>
                <th><%= I18n.t('dashboard_trades_time') %></th>
                <th><%= I18n.t('dashboard_trades_azzet') %></th>
                <th><%= I18n.t('dashboard_trades_amount') %></th>
                <th class="text-center"><%= I18n.t('dashboard_trades_actions') %></th>
            </tr>
        </thead>
        <tbody>
            <% @trades.each do |trade| %>
                <tr>
                    <td>
                        <%= trade.created_at.strftime("%H:%M") %>
                    </td>
                    <td>
                        <%= trade.Azzet.Name %>
                    </td>
                    <td>
                        $<%= trade.Amount %>
                    </td>
                    <td class="text-center">
                        <div class="btn-group">
                            <a href="#" class="btn btn-xs btn-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="glyphicon glyphicon-ok"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                <li>
                                    <%= link_to 'WON', update_webtrader_path(:trade => trade, :id => trade.id, :Result => 'WON' ), :method => :post, :remote => true %>
                                </li>
                                <li>
                                    <%= link_to 'TIE', update_webtrader_path(:trade => trade, :id => trade.id, :Result => 'TIE' ), :method => :post, :remote => true %>
                                </li>
                                <li>
                                    <%= link_to 'LOST', update_webtrader_path(:trade => trade, :id => trade.id, :Result => 'LOST' ), :method => :post, :remote => true %>
                                </li>           
                            </ul>  
                        </div>
                        <%= link_to destroy_webtrader_path(:id => trade.id), :method => :delete, data: { confirm: I18n.t('dashboard_alert_delete') }, :remote => true, :class => 'btn btn-xs btn-danger add-tooltip' do %>
                            <i class="fa fa-times"></i>
                        <% end %>  
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
