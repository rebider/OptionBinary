<div class="cls-content-sm panel">
  <div class="panel-body">
    <p class="pad-btm">Login to your account</p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <!-- Email input-->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-envelope"></i>
              </div>
              <%= f.email_field :email, autofocus: true,:placeholder =>"E-mail", :class=>"form-control", :data => {:validation => "required"}  %>
            </div>
          </div>

          <!-- Password input-->
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="fa fa-asterisk"></i>
              </div>
              <%= f.password_field :password, autocomplete: "off", :placeholder => "Password",:class=>"form-control", :data => {:validation => "required"} %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-8 text-left">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <p class="help-block">(if this is a private computer)</p>
            </div>
            <div class="col-xs-4">
              <div class="form-group text-right">
                <%= f.submit "Log in", :class=>"btn btn-success text-uppercase" %>
              </div>
            </div>
          </div>

          <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>
     
          <div class="mar-btm">
            <em>- or -</em>
          </div>

          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to omniauth_authorize_path(resource_name, provider), {:class => "btn btn-primary btn-lg btn-block"} do %>
                 <i class="fa fa-facebook fa-fw"></i>
                 Login with Facebook
              <% end %>
              <br />
            <% end -%>
          <% end -%> 
      <% end -%>
  </div>
</div>
<div class="pad-ver">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), :class=>"btn-link mar-rgt" %>
    <% end -%>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Create a new account", new_registration_path(resource_name), {:class => "btn-link mar-lft"} %>
    <% end -%>
</div>

<script type="text/javascript">
      $("form").validate({
    rules: {
      'user[email]': {required: true, email: true},
      'user[password]': {required: true, password: true}
    },
    tooltip_options: {
      'user[email]': {placement:'right',html:true},
      'user[password]': {placement:'right',html:true}
    }
  });

</script>