
<%= render 'buttons' %>
<%= render 'font' %>
<%= render "style" %>


<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div id="login-overlay" class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h4 class="modal-title" id="myModalLabel">Login</h4>
          </div>
          <div class="modal-body">
              <div class="row">
                  <div class="col-xs-6" id="signin">
                      <div class="well">

                        <div class="form-group">
                            <label for="username" class="control-label">Username</label>
                            <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder => "example@gmail.com" %>
                            <span class="help-block"></span>
                        </div>
                        <div class="form-group">
                            <label for="password" class="control-label">Password</label>
                            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Enter Password" %>
                            <span class="help-block"></span>
                        </div>
                         <% if devise_mapping.rememberable? -%>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                            <p class="help-block">(if this is a private computer)</p>
                          </div>
                        <% end -%>
                        <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password</div>
                   
                        <%= f.submit "Log in", :class=>"btn btn-info" %>
                        <div>
                          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                          <% end -%>
                        </div>
                        <div id="signup-movil">
                          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                            <%= link_to "Sign up", new_registration_path(resource_name), {:class => "btn btn-info btn-block"} %><br />
                          <% end -%>
                        </div>
                        <div id="fb-movil">
                          <%- if devise_mapping.omniauthable? %>
                            <%- resource_class.omniauth_providers.each do |provider| %>
                              <%= link_to omniauth_authorize_path(resource_name, provider), {:class => "btn btn-block btn-social btn-facebook"} do %>
                                 <li class="fa fa-facebook"><span class="sign">Sign in with Facebook</span></li>
                              <% end %>
                              <br />
                            <% end -%>
                          <% end -%>
                         </div>  
                      </div>
                  </div>
                  <div class="col-xs-6" id= "register" >
                      <p class="lead">Register now for <span class="text-success">FREE</span></p>
                        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                          <%= link_to "Sign up", new_registration_path(resource_name), {:class => "btn btn-info btn-block"} %><br />
                        <% end -%>
                      <div id="fb">
                                <%- if devise_mapping.omniauthable? %>
                                  <%- resource_class.omniauth_providers.each do |provider| %>
                                    <%= link_to omniauth_authorize_path(resource_name, provider), {:class => "btn btn-block btn-social btn-facebook"} do %>
                                       <li class="fa fa-facebook"><span class="sign">Sign in with Facebook</span></li>
                                    <% end %>
                                    <br />
                                  <% end -%>
                                <% end -%>
                      </div>  
                  </div>
              </div>
          </div>
      </div>
  </div>
<% end -%>




