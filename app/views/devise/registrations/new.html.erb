<div class="cls-content-lg panel">
  <div class="panel-body">
    <p class="pad-btm">Create an account</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
        <%= devise_error_messages! %>
          <div class="row">

            <div class="col-sm-6">
              <!-- Name input-->
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-male"></i>
                  </div>
                  <%= f.text_field :name, autofocus: true, :placeholder =>"Name", :class=>"form-control", :data => {:validation => "required"}  %>
                </div>
              </div>

              <!-- Email input-->
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-envelope"></i>
                  </div>
                  <%= f.email_field :email, autofocus: true,:placeholder =>"E-mail", :class=>"form-control", :data => {:validation => "required"}  %>
                </div>
              </div>

            </div>
    
            <div class="col-sm-6">
              <!-- Password input-->
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-asterisk"></i>
                  </div>
                  <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :class=>"form-control", :data => {:validation => "required"} %>
                </div>
              </div>

              <!-- Password confirmation input-->
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="fa fa-asterisk"></i>
                  </div>
                  <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password confirmation", :class=>"form-control", :data => {:validation => "required"} %>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12 text-right">
              <%= f.submit "Sign up", :class => "btn btn-success text-uppercase" %>
            </div>
          </div>

          <div class="mar-btm">
            <em>- or -</em>
          </div>

          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to omniauth_authorize_path(resource_name, provider), {:class => "btn btn-primary btn-lg btn-block"} do %>
                 <i class="fa fa-facebook fa-fw"></i>
                 Sign Up with Facebook
              <% end %>
              <br />
            <% end -%>
          <% end -%> 
      <% end %>
  </div>
</div>
<div class="pad-ver">
    Already have an account ?
    <%= link_to "Log in", new_session_path(resource_name), :class=>"btn-link mar-rgt" %>
</div>

<script type="text/javascript">
    $.validate();
</script>