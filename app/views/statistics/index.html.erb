
<!DOCTYPE html>
<html>
<head>
<script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
<link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.5.1.css">
<link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>

<%= javascript_tag do %>

  $(function() {
  	$( "#datepicker" ).datepicker();
  	$( "#datepicker_end" ).datepicker();
  	$( "#datepicker" ).datepicker( "option", "dateFormat", "yy-mm-dd" );
  	$( "#datepicker_end" ).datepicker( "option", "dateFormat", "yy-mm-dd" );


    $(function () {
    $('#grafica1').highcharts({
        chart: {
            type: 'area'
        },
        title: {
            text: 'Trade diario'
        },
        xAxis: {
            categories: 
              [
            <% (@start.to_date..@fechaf.to_date).map do |s| %>
            ' <%= s %> ' ,
            <% end %> ]
            ,
            tickmarkPlacement: 'on',
            title: {
                enabled: false
            }
        },
        yAxis: {
            title: {
                text: 'Total trades'
            },
            labels: {
                formatter: function () {
                    return this.value;
                }
            }
        },
        tooltip: {
            shared: true,
            valueSuffix: ' No'
        },
        plotOptions: {
            area: {
                stacking: 'normal',
                lineColor: '#666666',
                lineWidth: 1,
                marker: {
                    lineWidth: 1,
                    lineColor: '#666666'
                }
            }
        },
        series: [{
            name: 'Win',
            data: [<% (@start.to_date..@fechaf.to_date).map do |s| %>
                <% @win  = Trade.where(:User_id => current_user.id).where("created_at LIKE (?)", "#{s}%" ).where(result: "WIN").group("date(created_at)") %>
                   <% if @win.blank? %> 
                          <%= 0 %>, 
                    <% else %>
                        <% (@win.count).map do |e| %>
                          <%= e[1] %>,
                        <% end %> 
                    <% end %> 
                <% end -%> 
            ]
        }, {
            name: 'TIE',
            data: [<% (@start.to_date..@fechaf.to_date).map do |s| %>
                <% @tie  = Trade.where(:User_id => current_user.id).where("created_at LIKE (?)", "#{s}%" ).where(result: "TIE").group("date(created_at)") %>
                   <% if @tie.blank? %> 
                          <%= 0 %>, 
                    <% else %>
                        <% (@tie.count).map do |e| %>
                          <%= e[1] %>,
                        <% end %> 
                    <% end %> 
                <% end -%> ]
        }, {
            name: 'LOST',
            data: [<% (@start.to_date..@fechaf.to_date).map do |s| %>
                <% @lost  = Trade.where(:User_id => current_user.id).where("created_at LIKE (?)", "#{s}%" ).where(result: "LOST").group("date(created_at)") %>
                   <% if @lost.blank? %> 
                          <%= 0 %>, 
                    <% else %>
                        <% (@lost.count).map do |e| %>
                          <%= e[1] %>,
                        <% end %> 
                    <% end %> 
                <% end -%> ]
        }]
    });
});





	

    $('#grafica2').highcharts({
        title: {
            text: 'Balance diario',
            x: -20 //center
        },
        
        xAxis: {
        
            categories: [
            <% (@start.to_date..@fechaf.to_date).map do |s| %>
            ' <%= s %> ' ,
            <% end %> ]
        },
        yAxis: {
            title: {
                text: 'Total Balance'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valueSuffix: '$'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [{
            name: 'Payout',
            data: [<% (@start.to_date..@fechaf.to_date).map do |s| %>
                <% @ganado  = Trade.where(:User_id => current_user.id).where("created_at LIKE (?)", "#{s}%" ).where("BrokerAccount_id in (?)", [2,3]).group("date(created_at)") %>
                   <% if @ganado.blank? %> 
                          <%= 0 %>, 
                    <% else %>
                        <% (@ganado.sum(:Amount)).map do |e| %>
                          <%= e[1] %>,
                        <% end %> 
                    <% end %> 
                <% end -%> 
             ]

          }]
    });






    $('#grafica3').highcharts({
        chart: {
            type: 'area'
        },
        title: {
            text: 'Balance Acumulado'
        },
        xAxis: {
            categories: 
              [' <%= @f_salida %> ' ,]
            ,
            tickmarkPlacement: 'on',
            title: {
                enabled: false
            }
        },
        yAxis: {
            title: {
                text: 'Balance Total'
            },
            labels: {
                formatter: function () {
                    return this.value;
                }
            }
        },
        tooltip: {
            shared: true,
            valueSuffix: ' No'
        },
        plotOptions: {
            area: {
                stacking: 'normal',
                lineColor: '#666666',
                lineWidth: 1,
                marker: {
                    lineWidth: 1,
                    lineColor: '#666666'
                }
            }
        },
        series: [
            {
              name: 'Balance Acumulado',
              data: [ 
              <% (@suma).map do |win| %>
                  0 || <%= win[0] %> , 
                    <% end -%> 
              
                      ]},

        ]
    });


  });

<% end -%>

<meta charset=utf-8 />
<title>Statistics</title>
</head>
<body>
	<div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Filters
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
               	<p>Start: <input type="text" id="datepicker"></p>
               	<p>End:   <input type="text" id="datepicker_end"></p>
                <%= collection_select(:account, :broker, BrokerAccount.all, :id, :name,{},{:multiple => true})%>
                <%= collection_select(:strategies, :broker, Strategy.all, :id, :Name)%>
                <%= collection_select(:azzet, :broker, Azzet.all, :id, :Name)%>
                <%= content_tag :div, "", id: "performance_today_chart", data: {statistics: fecha } %>

            </div>
            <!-- /.panel-body -->
    </div> 

    <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Trades
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

            <div id="grafica1"  style="min-width: 310px; height:  400px; margin: 0 auto"></div>
            <div id="grafica2" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
            <div id="grafica3" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
            <!-- /.panel-body -->



        </div> 
</body>
</html>
