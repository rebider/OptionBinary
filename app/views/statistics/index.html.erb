
<!DOCTYPE html>
<html>
<head>
<script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
<link rel="stylesheet" href="http://cdn.oesmith.co.uk/morris-0.5.1.css">
<%= javascript_tag do %>

  $(function() {
	  Morris.Line
	  ({
	  	element: 'trades_chart',
	  	data: $('#trades_chart').data('trades'),
	  	xkey:   'created_at',
	  	ykeys:  ['total_win', 'total_tie', 'total_lost'],
	  	labels: ['WIN', 'TIE', 'LOST'],
	  	lineColors: ['#449d44', '#ec971f', '#c9302c']
	  });

  });

<% end -%>
<meta charset=utf-8 />
<title>Statistics</title>
</head>
<body>
	<div></div>
    <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart-o fa-fw"></i>Trades
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                
           		<div id='container'></div>
 				<%= content_tag :div, "", id: "trades_chart", data: {trades: trades_chart_data } %>
            </div>
            <!-- /.panel-body -->
        </div> 
</body>
</html>
