<%= form_for(@account_balance) do |f| %>
  <div class="panel panel-default">
    <div class="panel-heading">
        New Balance
    </div>
    <div class="panel-body">
      <div class="row">
          <div class="col-lg-12">
              <form class="form-horizontal" role="form">
                <% if @account_balance.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@account_balance.errors.count, "error") %> prohibited this account_balance from being saved:</h2>
                    <ul>
                    <% @account_balance.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-group">
                  <%= f.label :broker_account_id, class:'col-sm-3' %>
                  <div class="col-sm-9">
                    <%= f.collection_select(:broker_account_id, BrokerAccount.where(:user_id => current_user.id), :id, :name,{prompt: "Select an account"} , {class: "form-control", :name => "broker_account_id"} ) %>
                  </div>
                </div>

                <div class="form-group ">
                    <%= f.label :Amount, class:'col-sm-3' %>
                    <div class="col-sm-9">
                      <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <%= f.text_field :Amount, class:'form-control', :name => "Amount" %>
                      </div>
                      <p class="help-block">Lorem ipsum dolor sit amet</p>
                    </div>
                </div>

                <%= f.hidden_field :Type, :value => 'Manual', :name => "Type" %>
                <%= f.hidden_field :TradeID , :name => "TradeID"%>


                <div >
                  <%= f.submit "Save" , :class=>"btn btn-default"%>
                </div>

              </form>
          </div>
      </div>
      <!-- /.row (nested) -->
    </div>
        <!-- /.panel-body -->
  </div>
    <!-- /.panel -->
<% end %>