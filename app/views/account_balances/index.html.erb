<p id="notice"><%= notice %></p>
<%= render "shared/notify" %>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= I18n.t('account_balance_title') %></h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                        <tr>
                          <th><%= I18n.t('account_balance_table_broker_account') %></th>
                          <th><%= I18n.t('account_balance_table_amount') %></th>
                          <th><%= I18n.t('account_balance_table_type') %></th>
                          <th><%= I18n.t('account_balance_table_trade_id') %></th>
                          <th><%= I18n.t('account_balance_table_balance') %></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @account_balances.each do |account_balance| %>
                          <tr>
                            <td><%= account_balance.broker_account.name %></td>
                            <td><%= account_balance.Amount %></td>
                            <td><%= account_balance.Type %></td>
                            <td><%= account_balance.TradeID %></td>
                            <td><%= account_balance.Balance %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script type="text/javascript">
  $(document).ready( function () {
    $('#dataTables-example').DataTable();
  } );
</script>

