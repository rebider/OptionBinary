<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-lg-12">
        <div class="panel">
            <div class="panel-heading">
                <div class="panel-control"></div>
                <h3 class="panel-title">Listing Assets</h3>
            </div>
            <div class="panel-body">
                <div class="pad-btm form-inline">
                    <div class="col-sm-6 table-toolbar-left">
                         <%= link_to new_azzet_path do %>
                          <button class="btn btn-purple btn-labeled fa fa-plus">Nuevo Asset</button>
                        <% end %>                  
                    </div>
                </div>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                        <tr>
                          <th>Type</th>
                          <th>Name</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @azzets.each do |azzet| %>
                          <tr>
                            <td><%= azzet.Type %></td>
                            <td><%= azzet.Name %></td>
                            <td><%= link_to 'Show', azzet %></td>
                            <td><%= link_to 'Edit', edit_azzet_path(azzet) %></td>
                            <td><%= link_to 'Destroy', azzet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>
