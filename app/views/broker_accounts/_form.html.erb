<%= form_for(@broker_account) do |f| %>
<div class="panel panel-default">
      <div class="panel-heading">
          New Broker Account
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <form class="form-horizontal" role="form">
              <% if @broker_account.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@broker_account.errors.count, "error") %> prohibited this broker_account from being saved:</h2>

                  <ul>
                  <% @broker_account.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <%= f.hidden_field :user_id, :value => current_user.id, :name => "broker_account[user_id]" %>

              <div class="form-group">
                  <%= f.label :name, class:'col-sm-3' %>
                  <div class="col-sm-9">
                    <%= f.text_field :name, class:'form-control' %>
                  </div>
              </div>
               
              <div class="form-group">
                  <%= f.label :broker_id, class:'col-sm-3' %>
                  <div class="col-sm-9">
                    <%= f.collection_select :broker_id, Broker.order(:Name), :id, :Name, :name => "broker_account[broker_id]", class:'form-control' %>

                    <p class="help-block">Lorem ipsum dolor sit amet</p>
                  </div>
              </div>

              <div class="form-group">
                  <%= f.label :DemoAccount, class:'col-sm-3' %>
                  <div class="col-sm-9">
                    <%= f.text_field :DemoAccount, class:'form-control' %>
                  </div>
              </div>
               

              <div class="btn btn-default">
                <%= f.submit %>
              </div>
            </form>
          </div>
        </div>
      <!-- /.row (nested) -->
      </div>
        <!-- /.panel-body -->
  </div>
    <!-- /.panel -->
<% end %>
